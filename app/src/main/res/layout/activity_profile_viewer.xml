<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileView.ProfileViewer"
    android:id="@+id/rView">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_to_upload"
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/Profile_Name"
        android:layout_width="171dp"
        android:layout_height="57dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center|left"
        android:text="YourName"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Name_View"
        app:layout_constraintTop_toTopOf="@+id/Name_View"
        app:layout_constraintVertical_bias="0.002" />

    <TextView
        android:id="@+id/Profile_Age"
        android:layout_width="89dp"
        android:layout_height="39dp"
        android:gravity="center|left"
        android:text="YourAge"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Age_View"
        app:layout_constraintTop_toTopOf="@+id/Age_View"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Profile_City"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:gravity="center|left"
        android:text="YourCity"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/City_View"
        app:layout_constraintTop_toTopOf="@+id/City_View"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Profile_Gender"
        android:layout_width="106dp"
        android:layout_height="28dp"
        android:gravity="center|left"
        android:text="YourGender"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toEndOf="@+id/City_View"
        app:layout_constraintTop_toTopOf="@+id/City_View"
        app:layout_constraintVertical_bias="0.341" />

    <TextView
        android:id="@+id/Name_View"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="Name:"
        android:textColor="#090707"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424" />

    <TextView
        android:id="@+id/Age_View"
        android:layout_width="63dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="Age:"
        android:textColor="#090707"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555" />

    <TextView
        android:id="@+id/City_View"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:text="City:"
        android:textColor="#090707"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657" />

    <TextView
        android:id="@+id/Gender_View"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:text="Gender:"
        android:textColor="#090707"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774" />

</androidx.constraintlayout.widget.ConstraintLayout>