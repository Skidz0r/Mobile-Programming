<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/usernameFeed"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_image_feed"
        android:layout_alignLeft="@+id/profile_image_feed"

        android:layout_alignBottom="@+id/profile_image_feed"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="21dp"
        android:text="username"
        android:textSize="9sp"
        android:textStyle="bold|normal" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_feed"
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/postFeed"
        android:layout_width="253dp"
        android:layout_height="57dp"
        android:layout_alignTop="@+id/profile_image_feed"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:text="Post"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/timeFeed"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postFeed"
        android:layout_alignEnd="@+id/postFeed"
        android:layout_alignRight="@+id/postFeed"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:text="Time"
        android:textSize="8dp" />


</RelativeLayout>