<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">
    <!-- TODO: button has to be changed -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/cyan_blue"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ageDraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Username"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="22dp"
                android:text="Age:"
                android:textColor="@color/cyan_blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ageEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Username"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="9dp"
                android:ems="2"
                android:hint="Age"
                android:inputType="number"
                android:text="Age" />

            <TextView
                android:id="@+id/cityDraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ageDraw"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="24dp"
                android:text="City:"
                android:textColor="@color/cyan_blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/genderDraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cityDraw"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="22dp"
                android:text="Gender:"
                android:textColor="@color/cyan_blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cityEdit"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ageEdit"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="4dp"
                android:ems="4"
                android:hint="City"
                android:inputType="text"
                android:text="City" />

            <EditText
                android:id="@+id/genderEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cityEdit"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="2dp"
                android:ems="4"
                android:hint="Gender"
                android:inputType="text"
                android:text="Gender" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_below="@id/profile_image"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/Username"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/Apply"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_below="@+id/genderDraw"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@color/cyan_blue"
                android:text="Apply"
                android:textColor="@color/white" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>